<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
            
        <!-- Right side -->
        <Grid Grid.Column="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <DataGrid MouseLeftButtonDown="BooksDataGrid_MouseLeftButtonDown" 
                          SelectionUnit="FullRow" 
                          SelectionMode="Extended" 
                          Grid.Row="0" Margin="5" 
                          x:Name="BooksDataGrid" 
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Title" Binding="{Binding Path=Title}"/>
                        <DataGridTextColumn Width="*" Header="IDC" Binding="{Binding Path=IDC}"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Button Grid -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="15" x:Name="LoanButton" Content="Loan" Click="LoanButton_Click"/>
                    <Button Grid.Column="1" Margin="15" x:Name="SaveButton" Content="Save" Click="SaveButton_Click"/>
                </Grid>
                <Grid Grid.Row="2" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="IDC" VerticalAlignment="Center"/>
                        <TextBox x:Name="BookIDCTextBox" Grid.Row="0" HorizontalAlignment="Right" Width="250" Margin="0 5"/>
                        <Button Grid.Row="1" x:Name="PersonListButton" Content="Person List" Margin="50 5" Click="PersonListButton_Click"/>
                    </Grid> 
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Left side -->
        <Grid Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <DataGrid MouseLeftButtonDown="PersonDataGrid_MouseLeftButtonDown" 
                          SelectionUnit="FullRow" 
                          SelectionMode="Single" 
                          Grid.Row="0" Margin="5" 
                          x:Name="PersonDataGrid" 
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Name" Binding="{Binding First}"/>
                        <DataGridTextColumn Width="*" Header="IDK" Binding="{Binding Second}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Button Grid -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="15" x:Name="ReturnButton" Content="Return" Click="ReturnButton_Click"/>
                    <Button Grid.Column="1" Margin="15" x:Name="LoadButton" Content="Load" Click="LoadButton_Click"/>
                </Grid>
                <Grid Grid.Row="2" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="IDK" VerticalAlignment="Center"/>
                        <TextBox x:Name="PersonIDKTextBox" Grid.Row="0" HorizontalAlignment="Right" Width="250" Margin="0 5"/>
                        <Button Grid.Row="1" x:Name="BooksListButton" Content="Book List" Margin="50 5" Click="BooksListButton_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
