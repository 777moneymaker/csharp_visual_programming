<Window x:Class="Charting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charting"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Charting" Height="500" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <UniformGrid HorizontalAlignment="Stretch" VerticalAlignment="Center" Columns="2" Margin="75 0">
            <Button x:Name="LoadButton" Click="LoadButton_Click" HorizontalAlignment="Center" Content="Load Excel file" Margin="25" VerticalAlignment="Center" FontSize="16"/>
            <Label x:Name="FileLabel" HorizontalAlignment="Center" Margin="-94,15,10,15" Content="File: " VerticalAlignment="Center" FontSize="16" Width="386"/>
        </UniformGrid>

        <Button Grid.Row="1" Margin="150 50" x:Name="TableButton" FontSize="16" Click="TableButton_Click">Table</Button>
        <Button Grid.Row="2" Margin="150 50" x:Name="ChartButton" FontSize="16" Click="ChartButton_Click">Chart</Button>
    </Grid>
</Window>
